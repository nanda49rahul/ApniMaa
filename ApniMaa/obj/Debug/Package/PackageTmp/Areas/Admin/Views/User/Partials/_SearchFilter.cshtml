<div class="col-lg-12">
    <div class="ibox ">
        <div class="ibox-title">
            <h5>Filter</h5>
        </div>
        <div class="ibox-content">

            <div class="filter col-md-6">
                <label class="control-label">Search</label>
                <div class="input-group">
                    @Html.Hidden("SortBy", "CreatedOn")
                    @Html.Hidden("SortOrder", "desc")
                    <input class="form-control filter-textbox input-sm" id="Search" name="Search" placeholder="" type="text" value="">
                </div>
            </div>

            <div class="filter col-md-3">
                <label class="control-label">User Type</label>
                <select class="form-control filter-select input-sm" id="DDLUserType">
                    <option value="">--Select--</option>
                    <option value="2">Mother</option>
                    <option value="3">User</option>
                </select>
            </div>


            <div class="filter col-md-2">
                <label class="control-label displayBlock">&nbsp;</label>
                <input type="button" value="Search" id="btnFilterPeople" class="btn btn-primary btn-sm">
                <input type="button" value="Reset  " id="btnResetSearch" class="btn btn-primary btn-sm">
            </div>

        </div>
    </div>
</div>
