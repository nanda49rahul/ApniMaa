@model AddProspectModel

<div class="modal fade" id="prospectmodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Prospect</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="AddProspectForm">
                    <div class="form-group ">
                        <label>First Name</label>
                        @Html.TextBoxFor(m => m.firstName, new { @class = "form-control", @placeholder = "Enter first name here*" })
                        @Html.ValidationMessageFor(x => x.firstName)
                        @*<input type="text" placeholder="Enter First Name here" class="form-control">*@
                    </div>
                    <div class="form-group ">
                        <label>Last Name</label>
                        @Html.TextBoxFor(m => m.lastName, new { @class = "form-control", @placeholder = "Enter last name here*" })
                        @Html.ValidationMessageFor(x => x.lastName)
                        @*<input type="text" placeholder="Enter Last Name here" class="form-control">*@
                    </div>
                    <div class="form-group ">
                        <label>Email</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Enter email here*" })
                        @Html.ValidationMessageFor(x => x.Email)
                        @*<input type="email" placeholder="Enter Email here" class="form-control">*@
                    </div>
                    <div class="form-group ">
                        <label>Phone Number</label>
                        @Html.TextBoxFor(m => m.MobileNumber, new { @class = "form-control", @placeholder = "Enter phone number here*" })
                        @Html.ValidationMessageFor(x => x.MobileNumber)
                        @*<input type="text" placeholder="Enter Phone Number here" class="form-control">*@
                    </div>

                    

                    <div class="form-group">
                        <label>Country</label>
                       @Html.DropDownListFor(x => x.countryId, Model.CountryList, "--Select--", new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.countryId)
                    </div>

                    <div class="form-group">
                        <label>Campaign</label>
                        <select class="form-control">
                            <option>Healthcare Professionals</option>
                            <option>Healthcare Professionals</option>
                            <option>Healthcare Professionals</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <input type="button" value="Submit" id="addProspect" class="btn btn-primary btn-theme">
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
