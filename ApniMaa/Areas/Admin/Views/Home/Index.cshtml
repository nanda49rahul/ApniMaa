@model  LoginModal

@{
    
    Layout = "~/Areas/Admin/Views/Shared/_beforeLoginAdminLayout.cshtml";
}

<div class="middle-box text-center loginscreen animated fadeInDown">
    <div>
        <div>
            <h1 class="logo-name">ApniMaa</h1>
        </div>

        @*<h3>Welcome to IN+</h3>*@
        @*<p>
            Perfectly designed and precisely prepared admin theme with over 50 pages with extra new web app views.
        </p>*@
        <p>Login in. To see it in action.</p>

        <form class="m-t" id="loginForm">
            <div class="form-group">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Username*" })
                <div id="email-error">@Html.ValidationMessageFor(m => m.UserName)</div>
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password*" })
                <div id="password-error">@Html.ValidationMessageFor(m => m.Password)</div>
            </div>
            <button class="btn btn-primary block full-width m-b" id="signInBtn" data-dismiss="modal" type="button">Log me in</button>
            <a class="btn btn-primary" onclick="Admin.ForgotPassword(this)" href="javascript:void(0);" id="" data-dismiss="modal">Forget Password</a>
        </form>
    </div>
</div>


    @section scripts{
        <script src="~/Scripts/AdminScripts/adminlogin.js"></script>
        <script type="text/javascript">
            var siteUrls = {
                loginUrl: "@Url.Action("Login", "Home", new { area = "Admin" })",
                forgotPasswordUrl: "@Url.Action("ForgotPassword", "User", new { area = "Admin" })",
                dashboard: "@Url.Action("Dashboard", "Home", new { area = "Admin" })"
            };
        </script>
    }
