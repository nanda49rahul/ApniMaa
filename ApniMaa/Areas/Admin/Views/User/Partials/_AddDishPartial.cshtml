@model AddDishForMotherModel


<form class="form-horizontal" id="AddDishForMotherForm">
    @Html.HiddenFor(x => x.MotherID)
    <div class="filter col-md-3">
        <label class="control-label">Dish Image</label>
        <div class="input-group">
            @Html.TextBoxFor(x => x.DishImage, new { @Type = "File" })
        </div>
        <div class="input-group validationError">
            @Html.ValidationMessageFor(x => x.DishImage)
        </div>
    </div>
    <div class="filter col-md-3">
        <label class="control-label">Add Mother Dish </label>
        <div class="input-group">
            @Html.DropDownListFor(x => x.DishId, Model.DishList, "--Select--", new { @class = "form-control" })
        </div>
        <div class="input-group validationError">
            @Html.ValidationMessageFor(x => x.DishId)
        </div>
    </div>
    <div class="filter col-md-1">
        <input type="button" style="margin-top: -38px;" class="btn btn-primary" id="BtnAddUserDish" value="Add" />
    </div>
    <div class="filter col-md-2">
        <input data-toggle="modal" data-target="#myModal" type="button" style="margin-top: -38px;" class="btn btn-primary" id="BtnAddNewDish" value="Add New Dish" />
    </div>
</form>