@model AddDishModel

<form class="form-horizontal" id="AddDishForm">
    @*@Html.HiddenFor(x => x.MotherID)*@
    <div class="modal" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Add New Dish</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <div class="">
                        <div class="filter col-md-12">
                            <label class="control-label">Category</label>
                            <div class="input-group">
                                @Html.DropDownListFor(x => x.CategoryId, Model.CategoryList, "--Select--", new { @class = "form-control filter-textbox input-sm" })
                            </div>
                            <div class="input-group validationError">
                                @Html.ValidationMessageFor(x => x.CategoryId)
                            </div>
                        </div>

                        <div class="filter col-md-12">
                            <label class="control-label">Name</label>
                            <div class="input-group">
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control filter-textbox input-sm" })
                            </div>
                            <div class="input-group validationError">
                                @Html.ValidationMessageFor(x => x.Name)
                            </div>
                        </div>

                        <div class="filter col-md-12">
                            <label class="control-label">Description</label>
                            <div class="input-group">
                                @Html.TextAreaFor(x => x.Description, new { @class = "form-control filter-textbox input-sm" })
                            </div>
                            <div class="input-group validationError">
                                @Html.ValidationMessageFor(x => x.Description)
                            </div>
                        </div>
                        <div class="row">
                            <br />
                            <div class=" col-md-6">
                                <div class="col-sm-offset-4 col-sm-8">
                                    <input type="button" class="btn btn-primary" id="AddDishBtn" value="Submit" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>

            </div>
        </div>
    </div>
</form>